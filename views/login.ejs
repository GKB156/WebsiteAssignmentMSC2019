<%- include('head'); %>
<body>
	<%- include('navbar') %>
	<h1>Login</h1>
	<div class="container">
		<!-- Default form login -->
		<main class="text-center border border-light p-5">
			<p class="h2 mb-4">Sign in</p>

			<!-- Username -->
			<input type="text" id="username" class="form-control mb-4" placeholder="Username" aria-label="Username" />
			<div class="error" id="usernameError">&nbsp;</div>

			<!-- Password -->
			<input type="password" id="password" class="form-control mb-4" placeholder="Password" aria-label="Password" />
			<div class="error" id="passwordError">&nbsp;</div>

			<!-- Sign in button -->
			<button class="btn btn-info btn-block my-4" aria-label="Login" onclick="login()">Sign in</button>

			<!-- Register -->
			<div class="not-a-member">
				<p>
					Not a member?
					<a href="/register">Register</a>
				</p>
			</div>
		</main>
	</div>
	<%- include('footer'); %>
</body>
