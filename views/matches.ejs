<%- include('head'); %>
<body>
	<%- include('navbar', { loggedIn: loggedIn }) %>
	<h1><%= title %></h1>
	<div class="container">
		<form action="/api/user/predictions" method="POST">
			<div class="table-rows">
				<% meme.forEach((game) => { %> <% game.matches.forEach((match) => { %>
				<div class="match">
					<div class="team">
						<img src="../images/<%= match[0].image %>" alt="" class="logo" />
						<div class="team-name"><%= match[0].teamName %></div>
					</div>

					<div class="spinBox">
						<button
							onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
							class="up"
							type="button"
						></button>
						<input type="number" min="0" step="10" value="0" id=<%=
						match[0].teamName %> />
						<button
							onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
							class="down"
							type="button"
						></button>
					</div>

					<div class="versus">
						V
					</div>

					<div class="spinBox">
						<button
							onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
							class="up"
							type="button"
						></button>
						<input type="number" min="0" step="10" value="0" id=<%=
						match[1].teamName %> />
						<button
							onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
							class="down"
							type="button"
						></button>
					</div>

					<div class="team">
						<img src="../images/<%= match[1].image %>" alt="" class="logo" />
						<div class="team-name"><%= match[1].teamName %></div>
					</div>
				</div>
				<% }) %> <% }) %>
			</div>
			<div>
				<input type="submit" value="Submit Scores" />
			</div>
		</form>
	</div>

	<%- include('footer'); %>
</body>
