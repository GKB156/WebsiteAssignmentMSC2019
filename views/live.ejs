<%- include('head'); %>
<body onload="setTimeout(reload, 3000)">
	<%- include('navbar', { loggedIn: loggedIn }) %>
	<h1><%= title %></h1>
	<div class="container">
		<form action="/api/user/predictions" method="POST">
			<div class="matches-black-container"></div>
			<div class="matches-table-rows">
				<% meme.forEach((game) => { %> <% game.matches.forEach((match) => { %>
				<div class="matches-match">
					<div class="matches-team">
						<img src="../images/<%= match[0].image %>" alt="" class="matches-logo" />
						<div class="matches-team-name"><%= match[0].teamName %></div>
					</div>

					<div class="spinBox">
						<input type="number" value="<%= match[0].score %>" aria-label="<%= match[0].teamName %> Scored <%= match[0].score %> Points" />
					</div>

					<div class="matches-versus">V</div>

					<div class="spinBox">
						<input type="number" value="<%= match[0].score %>" aria-label="<%= match[1].teamName %> Scroed <%= match[0].score %> Points" />
					</div>

					<div class="matches-team">
						<img src="../images/<%= match[1].image %>" alt="" class="matches-logo" />
						<div class="matches-team-name"><%= match[1].teamName %></div>
					</div>
				</div>
				<% }) %> <% }) %>
			</div>
		</form>
	</div>
	<%- include('footer'); %>
</body>
